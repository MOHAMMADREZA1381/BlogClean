@model Domain.ViewModels.Category.EditCategoryViewModel
@{
    ViewData["Title"] = "ویرایش دسته بندی";

}



<div class="row">
    <div class="col-3"></div>
    <div class="col-md-6">
        <div class="card mb-4">
            <h5 class="card-header">ویرایش دسته بندی</h5>
            <div class="card-body">
                <form asp-area="AdminPanel" asp-controller="Category" asp-action="EditCategory" method="post">
                    <div>
                        <input asp-for="id"   type="hidden">
                        <label class="form-label" for="defaultFormControlInput">نام دسته بندی</label>
                        <input asp-for="Name" aria-describedby="defaultFormControlHelp" class="form-control" id="defaultFormControlInput" placeholder="نام دسته بندی" type="text">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-success d-block mx-auto center mt-1">ارسال</button>
                </form>
            </div>
        </div>
    </div>
</div>