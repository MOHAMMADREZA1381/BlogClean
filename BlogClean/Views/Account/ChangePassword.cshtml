@model Domain.ViewModels.User.ForgotPasswordViewModel
@{
    ViewData["Title"] = "ویرایش رمز عبور";

}
<!-- شوع آن -->
<section class="bg-home bg-circle-gradiant d-flex align-items-center">
    <div class="bg-overlay bg-overlay-white"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8">
                <div class="card shadow rounded border-0">
                    <div class="card-body">
                        <h4 class="card-title text-center">تغیر رمز عبور</h4>

                        <form asp-area="" asp-controller="Account" asp-action="ChangePassword"  class="login-form mt-4">
                          <input type="hidden" asp-for="ActivateCode"/>
                            <div class="row">
                                <div class="col-lg-12">
                                    <p class="text-muted">لطفا رمز عبور جدید خودرا وارد کنید</p>
                                    <div class="mb-3">
                                        <label class="form-label"> رمز عبور جدید <span class="text-danger">*</span></label>
                                        <div class="form-icon position-relative">
                                            <i data-feather="key" class="fea icon-sm icons"></i>
                                            <input asp-for="Password" type="password" class="form-control ps-5" placeholder="رمز عبور جدید خودرا وارد کنید">
                                            <span asp-validation-for="Password"></span>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label"> تکرار رمز عبور  <span class="text-danger">*</span></label>
                                        <div class="form-icon position-relative">
                                            <i data-feather="key" class="fea icon-sm icons"></i>
                                            <input asp-for="ConfirmPassword" type="password" class="form-control ps-5" placeholder="رمز عبور جدید خودرا وارد کنید">
                                            <span asp-validation-for="ConfirmPassword"></span>
                                        </div>
                                    </div>

                                </div><!--end col-->
                                <div class="col-lg-12">
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">ارسال </button>
                                    </div>
                                </div><!--end col-->
                            </div>
                        </form>
                    </div>
                </div>
            </div><!--end col-->
        </div><!--end row-->
    </div> <!--end container-->
</section><!--end section-->
<!-- پایان آن -->