@model Domain.ViewModels.User.RegisterViewModel



<!-- شوع آن -->
<section class="bg-auth-home d-table w-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 col-md-6">
                <div class="me-lg-5">
                    <img src="images/blog/signup.svg" class="img-fluid d-block mx-auto" alt="RegisterPNG">
                </div>
            </div>
            <div class="col-lg-5 col-md-6">
                <div class="card shadow rounded border-0">
                    <div class="card-body">
                        <h4 class="card-title text-center">ثبت نام </h4>
                        <form asp-controller="Account" asp-action="Register" method="post" class="login-form mt-4">
                            <div class="row">

                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label class="form-label"> نام کاربری <span class="text-danger">*</span></label>
                                        <div class="form-icon position-relative">
                                            <i data-feather="mail" class="fea icon-sm icons"></i>
                                            <input asp-for="UserName" type="text" class="form-control ps-5" placeholder="نام کاربری">
                                            <span class="text-danger" asp-validation-for="UserName"></span>
                                        </div>
                                    </div>
                                </div><!--end col-->

                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label class="form-label">ایمیل شما <span class="text-danger">*</span></label>
                                        <div class="form-icon position-relative">
                                            <i data-feather="mail" class="fea icon-sm icons"></i>
                                            <input asp-for="Email" type="email" class="form-control ps-5" placeholder="ایمیل">
                                            <span class="text-danger" asp-validation-for="Email"></span>
                                        </div>
                                    </div>
                                </div><!--end col-->

                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label class="form-label">رمز عبور  <span class="text-danger">*</span></label>
                                        <div class="form-icon position-relative">
                                            <i data-feather="key" class="fea icon-sm icons"></i>
                                            <input asp-for="Password" type="password" class="form-control ps-5" placeholder="رمز عبور ">
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                    </div>
                                </div><!--end col-->

                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label class="form-label">رمز عبور  <span class="text-danger">*</span></label>
                                        <div class="form-icon position-relative">
                                            <i data-feather="key" class="fea icon-sm icons"></i>
                                            <input asp-for="ConfirmPassword" type="password" class="form-control ps-5" placeholder="تکرار عبور ">
                                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                        </div>
                                    </div>
                                </div><!--end col-->

                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <div class="form-check">
                                            <input asp-for="Rules" class="form-check-input" type="checkbox"  id="flexCheckDefault">
                                            <label class="form-check-label" for="flexCheckDefault">تایید میکنم <a href="#" class="text-primary">قوانین سایت را و تیکت را فعال میکنم</a></label>
                                        </div>
                                    </div>
                                </div><!--end col-->

                                <div class="col-md-12">
                                    <div class="d-grid">
                                        <input type="submit" value="ثبت نام" class="btn btn-primary">
                                    </div>
                                </div><!--end col-->

                                <div class="mx-auto">
                                    <p class="mb-0 mt-3"><small class="text-dark me-2">قبلاً حساب دارید؟</small> <a asp-controller="Account" asp-action="Login" class="text-dark fw-bold">وارد شوید </a></p>
                                </div>
                            </div><!--end row-->
                        </form>
                    </div>
                </div>
            </div> <!--end col-->
        </div><!--end row-->
    </div> <!--end container-->
</section><!--end section-->
<!-- پایان آن -->
