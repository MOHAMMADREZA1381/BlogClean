@model Domain.ViewModels.User.ActiveMobileCodeViewModel


<!-- شوع آن -->
<section class="bg-home bg-circle-gradiant d-flex align-items-center">
    <div class="bg-overlay bg-overlay-white"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8">
                <div class="card shadow rounded border-0">
                    <div class="card-body">
                        <h4 class="card-title text-center"> فعالسازی شماره تلفن همراه </h4>

                        <form asp-controller="Account" asp-action="Verify" method="post" class="login-form mt-4">
                            <div class="row">
                                <div class="col-lg-12">
                                    <p class="text-muted">لطفا کدی که به شماره همراه شما ارسال شده است را وارد کنید</p>
                                    <div class="mb-3">
                                        <label class="form-label"> کد  <span class="text-danger">*</span></label>
                                        <div class="form-icon position-relative">
                                            <i  class="fea icon-sm icons"></i>
                                            <input type="text" asp-for="ActiveCode" class="form-control ps-5" placeholder="کد ارسال شده" >
                                             <span asp-validation-for="ActiveCode" class="text-danger"></span>
                                            </div>
                                    </div>
                                </div><!--end col-->
                                <div class="col-lg-12">
                                    <div class="d-grid">
                                        <button class="btn btn-primary">ارسال </button>
                                    </div>
                                </div><!--end col-->
                               
                            </div>
                        </form>
                    </div>
                </div>
            </div><!--end col-->
        </div><!--end row-->
    </div> <!--end container-->
</section><!--end section-->
<!-- پایان آن -->