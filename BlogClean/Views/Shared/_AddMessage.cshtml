@model Domain.ViewModels.Message.MessageViewModel


<form asp-area="" asp-controller="Message" asp-action="AddMessage" class="mt-3">
    <input type="hidden"  asp-for="ContentId"/>
    <input type="hidden" asp-for="CaseId" id="CaseId" />
    <div class="row">
        <div class="col-md-12">
            <div class="mb-3">
                <label class="form-label">نظر شما</label>
                <div class="form-icon position-relative">
                    <i data-feather="message-circle" class="fea icon-sm icons"></i>
                    <textarea id="message" placeholder="کامنت شما" rows="5" asp-for="text" class="form-control ps-5"></textarea>
                </div>
            </div>
        </div><!--end col-->


        <div class="col-md-12">
            <div class="send d-grid">
                <button type="submit" class="btn btn-primary">ارسال پیام</button>
            </div>
        </div><!--end col-->
    </div><!--end row-->
</form><!--end form-->