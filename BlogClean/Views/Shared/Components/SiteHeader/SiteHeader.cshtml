 <!-- Navbar STart -->
 <header style="height: 74px !important" id="topnav" class="defaultscroll sticky ">
   
     <div class="container">
         <!-- Logo container-->
         <div>
             <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                 <img style="max-height: 125px !important" class="LogoC" src="/images/Logo.png" alt="">
             </a>
         </div>
         @if (User.Identity.IsAuthenticated == false)
         {
             <div class="buy-button">
                 <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-primary"> ثبت نام | ورود </a>
             </div>
             <!--end login button-->
         }
         else
         {
             <div class="buy-button">
                 <a asp-area="" asp-controller="Account" asp-action="UserPanel" class="btn btn-primary">صفحه کاربری</a>
             </div>
             <!--end login button-->
         }
         <!-- End Logo container-->
         <div class="menu-extras">
             <div class="menu-item">
                 <!-- Mobile menu toggle-->
                 <a class="navbar-toggle" id="isToggle" onclick="toggleMenu()">
                     <div class="lines">
                         <span></span>
                         <span></span>
                         <span></span>
                     </div>
                 </a>
                 <!-- End mobile menu toggle-->
             </div>
         </div>

         <div id="navigation">
             <!-- Navigation Menu-->
             <ul class="navigation-menu">
                 @if (!User.Identity.IsAuthenticated)
                 {
                     <li class="d-sm-none"><a asp-controller="Account" asp-action="Login" class="sub-menu-item">ورود/ثبت نام</a></li>
                 }
                 <li><a asp-controller="Home" asp-action="Index" class="sub-menu-item">صفحه اصلی </a></li>
                 <li class="has-submenu parent-parent-menu-item">
                     <a href="javascript:void(0)"> دسته بندی ها </a><span class="menu-arrow"></span>
                     <ul class="submenu megamenu">
                         <li>
                             <ul>
                                 @await Component.InvokeAsync("CategoryMenu", 0)

                             </ul>
                         </li>

                         <li>
                             <ul>
                                 @await Component.InvokeAsync("CategoryMenu", 7)

                             </ul>
                         </li>

                         <li>
                             <ul>
                                 @await Component.InvokeAsync("CategoryMenu", 14)

                             </ul>
                         </li>

                         <li>
                             <ul>
                                 @await Component.InvokeAsync("CategoryMenu", 21)

                             </ul>
                         </li>

                         <li>
                             <ul>
                                 @await Component.InvokeAsync("CategoryMenu", 28)

                             </ul>
                         </li>
                     </ul>
                 </li>
                 @if (User.Identity.IsAuthenticated)
                 {
                     <li class="has-submenu parent-parent-menu-item">
                         <a href="javascript:void(0)">صفحات </a><span class="menu-arrow"></span>
                         <ul class="submenu">
                             @if (User.Identity.IsAuthenticated)
                             {
                                 @await Component.InvokeAsync("AdminMenu")
                             }

                             <li class="has-submenu parent-menu-item">
                                 <a href="javascript:void(0)"> حساب کاربری </a><span class="submenu-arrow"></span>
                                 <ul class="submenu">
                                     <li><a asp-controller="Account" asp-action="UserPanel" class="sub-menu-item">پروفایل </a></li>
                                     <li><a asp-controller="Account" asp-action="EditUserInfo" class="sub-menu-item">ویرایش حساب کاربری</a></li>

                                 </ul>
                             </li>

                             <li><a asp-controller="Content" asp-action="CreateContent" class="sub-menu-item">داستان خودت رو بنویس!</a></li>
                             <li><a asp-controller="Content" asp-action="Index" class="sub-menu-item"> همه محتوا ها </a></li>
                             <li><a asp-controller="Bookmark" asp-action="Index" class="sub-menu-item">بوکمارک ها </a></li>
                             @await Component.InvokeAsync("HeaderLink")
                             <li><a asp-controller="ContactUs" asp-action="Index" class="sub-menu-item"> ارتباط با ما </a></li>
                             <li><a asp-controller="Account" asp-action="Logout" class="sub-menu-item">خروج</a></li>

                         </ul>
                     </li>
                 }
             </ul><!--end navigation menu-->
         </div><!--end navigation-->
     </div><!--end container-->
 </header><!--end header-->
<!-- Navbar End -->
<!-- Loader -->
<div id="preloader">
    <div id="status">
        <div class="spinner">
            <div class="double-bounce1"></div>
            <div class="double-bounce2"></div>
        </div>
    </div>
</div>
<!-- Loader -->